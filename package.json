{
  "name": "@noi/workspaces",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier -w ."
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm exec lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md}": [
      "eslint --cache --fix"
    ],
    "*": [
      "prettier --write --cache --ignore-unknown"
    ]
  },
  "dependencies": {
    "@noi/core": "workspace:*",
    "@vueuse/core": "^10.7.2",
    "@vueuse/motion": "^2.1.0",
    "vue": "^3.4.21"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vitest/coverage-istanbul": "^1.3.0",
    "@vitest/ui": "^1.3.0",
    "@vue/test-utils": "^2.4.3",
    "autoprefixer": "^10.4.18",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-vue": "^9.22.0",
    "happy-dom": "^12.10.3",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.35",
    "prettier": "3.2.4",
    "simple-git-hooks": "^2.9.0",
    "tailwindcss": "^3.4.1",
    "vite": "^5.2.6",
    "vitest": "^1.3.0"
  }
}
